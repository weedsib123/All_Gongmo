<!--로그인 구현-->
<div class="login">
    <div id="login_header">
        <h2 class="s_tit">로그인</h2>
    </div>
<!--    action을 processLogin으로 app.js에 있는 라우터로 연결-->
    <form id="login-form" method="post" action="/processLogin">
<!--        각 아이디 비밀번호 입력할 input box 구현-->
        <label class="legend">아이디</label>
        <input name="id" type="text">
        <label class="legend">패스워드</label>
        <input name="passwords" type="password">
<!--        로그인 이미지를 통해 로그인버튼 구현-->
        <div id="login-left">
            <input type="image" src="img/login.png" width="50px" height="50px" value="submit">
<!--            로그인이 실패한다면 메세지 출력-->
            <%if(error_msg){%>
                <b id="login-msg"><%= error_msg %></b>
            <%}%>
        </div>
<!--        회원가입 버튼-->
        <a href="/register" id="login_register">회원가입</a>
    </form>
</div>

